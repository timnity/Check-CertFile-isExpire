# 用于设置编辑器编码风格和规范
# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
font_size = 14
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
max_line_length = 0

[*.json]
max_line_length = 100

[*.md]
max_line_length = 100
